<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Liste des réservations</title>
</head>
<body>

  <% if (typeof success !== 'undefined' && success) { %>
    <div style="background: #d4edda; color: #155724; padding: 15px; margin-bottom: 20px; border: 1px solid #c3e6cb; border-radius: 4px;">
      <strong>Succès !</strong>
      <%= typeof errorMsg !== 'undefined' ? errorMsg : 'Opération réussie' %>
      <% if (typeof reservationId !== 'undefined') { %>
        (ID : <%= reservationId %>)
      <% } %>
    </div>
  <% } %>

  <% if (typeof errorMsg !== 'undefined' && !success) { %>
    <div style="background: #f8d7da; color: #721c24; padding: 15px; margin-bottom: 20px; border: 1px solid #f5c6cb; border-radius: 4px;">
      <strong>Erreur :</strong> <%= errorMsg %>
    </div>
  <% } %>

  <h1>Liste des réservations</h1>

  <% if (reservations && reservations.length > 0) { %>
    <table border="1" style="border-collapse: collapse; width: 100%;">
      <thead>
        <tr>
          <th>Catway n°</th>
          <th>Client</th>
          <th>Bateau</th>
          <th>Début</th>
          <th>Fin</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% reservations.forEach(resa => { %>
          <tr>
            <td><%= resa.catwayNumber %></td>
            <td><%= resa.clientName %></td>
            <td><%= resa.boatName %></td>
            <td><%= new Date(resa.checkIn).toLocaleDateString() %></td>
            <td><%= new Date(resa.checkOut).toLocaleDateString() %></td>
            <td>
              <a href="/reservations/<%= resa._id %>">Détails</a> |
              <a href="/reservations/<%= resa._id %>/edit">Modifier</a> |
              <button
                 onclick="supprimerReservation('<%= resa._id %>')"
                style="background: #dc3545; color: white; border: none; padding: 5px 10px; cursor: pointer; border-radius: 4px;">
                Supprimer
              </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>Aucune réservation trouvée.</p>
  <% } %>

  <br>
  <a href="/dashboard">Retour au tableau de bord</a>

  <script>
    function supprimerReservation(id) {
      if (!confirm('Vraiment supprimer cette réservation ?')) return;

      fetch(`/reservations/${id}`, { method: 'DELETE' })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            alert('Réservation supprimée avec succès');
            location.reload();
          } else {
            alert(data.message || 'Erreur');
          }
        })
        .catch(err => alert(err.message));
    }
  </script>

</body>
</html>
